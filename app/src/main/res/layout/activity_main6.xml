<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity6">

    <!-- esse é o icone da barrinha-->
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:background="@drawable/quadrado">

        <TextView
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="15dp"
            android:text="Cadastro"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

    <!-- logo do senai -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo" />
    
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-35dp"
        android:text="Ficha do usuário"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp" />


    <!-- foto do usuário -->
    <ImageView
        android:id="@+id/foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:rotation="-90"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="NOME:"
        android:textStyle="bold"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-150dp"/>

    <!-- onde vai ficar o nome do usuário -->
    <TextView
        android:id="@+id/nome"
        android:layout_width="200dp"
        android:text="BdNome"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/textViewNOME"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:padding="10dp"
        android:rotation="-90"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="DATA DE NASCIMENTO:"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-30dp"/>

    <!-- onde vai ficar a data de nascimento -->
    <TextView
        android:id="@+id/data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="INSTITUIÇÃO:"
        android:textStyle="bold"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="4dp"/>

    <!-- onde vai ficar o nome da instituição -->
    <TextView
        android:id="@+id/instituicao"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:text="SENAI-Hermenegildo Campos de Almeida"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURSO:"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <!-- onde vai ficar o nome da CURSO -->
    <TextView
        android:id="@+id/curso"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="-4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TURMA:"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <!-- onde vai ficar o nome da TURMA -->
    <TextView
        android:id="@+id/turma"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TELEFONE/CONTATO:"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"/>

    <!-- onde vai ficar o numero da TELEFONE -->
    <TextView
        android:id="@+id/telefone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-MAIL:"
        android:textStyle="bold"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-50dp"/>

    <!-- onde vai ficar o EMAIL -->
    <TextView
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:textAlignment="center"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N° MATRÍCULA:"
        android:textStyle="bold"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="0dp"/>

    <!-- onde vai ficar o numero da MATRICULA -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENDEREÇO:"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-15dp"/>

    <!-- onde vai ficar o ENDERECO -->

    <TextView
        android:id="@+id/endereco"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/matricula"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-25dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF:"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"/>

    <!-- onde vai ficar o CPF do usuário -->

    <TextView
        android:id="@+id/cpf"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textAlignment="center"
        android:layout_marginTop="6dp"/>

    <!-- onde vai ficar o numero do RG -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-40dp"
        android:text="RG:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rg"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_marginLeft="240dp"
        android:textAlignment="center"
        android:layout_marginTop="-0dp" />

    <!-- esse é o circulo vermelho -->
    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="623dp"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/formas_geometricas"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- icone de log-out -->
        <LinearLayout
            android:id="@+id/imageButton9"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="80dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/Red"
                android:contentDescription="TODO"
                android:onClick="Log_out"
                app:srcCompat="@drawable/log_out" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="40dp"
                android:text="Log-out"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <!-- icone do home -->
        <LinearLayout
            android:id="@+id/imageButton10"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-80dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/Red"
                android:contentDescription="TODO"
                android:onClick="home"
                app:srcCompat="@drawable/homez" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="40dp"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <!-- esse é o icone do Tema Escuro -->
        <ImageButton
            android:id="@+id/btndark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-75dp" />

        <TextView
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-4dp"
            android:text="Tema"
            android:textColor="@color/white"
            android:textSize="16dp" />


    </LinearLayout>



    </LinearLayout>